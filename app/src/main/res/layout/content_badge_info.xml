<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/badge_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_info"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/very_small"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/item_feed_video_new">

    <TextView
        fontPath="@string/bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/badge_title_offset"
        android:drawablePadding="@dimen/very_small"
        android:drawableStart="@drawable/ic_info"
        android:gravity="center_vertical"
        android:text="@string/text_learn_more"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/badge_title_text_size" />

</FrameLayout>
