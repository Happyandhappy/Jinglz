<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/video_rule_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/large"
    android:weightSum="100"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/video_rules_icon_size"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:src="@drawable/ic_volume" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium"
        android:gravity="center"
        android:text="@string/text_can_you_hear_me"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/onboarding_description_offset"
        android:layout_marginStart="@dimen/onboarding_description_offset"
        android:layout_marginTop="@dimen/small"
        android:gravity="center"
        android:maxWidth="@dimen/dialog_text_width"
        android:text="@string/you_volume_needs_to_be_enabled_to_watch_this_video"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/white" />

</LinearLayout>