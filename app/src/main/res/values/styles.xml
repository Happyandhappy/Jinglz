<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/yellow</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="android:textColor">@color/black_20</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="TranslucentStatusTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="StartTheme" parent="TranslucentStatusTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="ShowVideoTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@color/dark_grey</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:drawablePadding">@dimen/editTextPadding</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>

    <style name="EditText" parent="BaseEditText">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="InputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/textHint</item>
        <item name="hintTextAppearance">@style/TextAppearence.App.TextInputLayout</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheetStyle</item>
    </style>

    <style name="AppTheme.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/white</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="TermsCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/textHint</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="GenderToggle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gender_toggle_text</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:drawablePadding">@dimen/editTextPadding</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ProgressDialogTheme" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/ic_fb</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.2</item>
        <item name="android:foreground" tools:targetApi="lollipop">@drawable/ripple_light</item>
    </style>

    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="fontPath">@string/bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="Button.PrimaryBordered" parent="Button.Primary">
        <item name="android:background">@drawable/background_button_bordered</item>
        <item name="android:textColor">@color/primary</item>
        <item name="textAllCaps">false</item>
        <item name="fontPath">@string/regular</item>
    </style>

    <style name="Button.PrimaryBorderedYellow" parent="Button.Primary">
        <item name="android:background">@drawable/background_button_bordered_yellow</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:paddingStart">@dimen/large</item>
        <item name="android:paddingEnd">@dimen/large</item>
    </style>

    <style name="Button.PrimaryBorderedWhite" parent="Button.Primary">
        <item name="android:background">@drawable/background_button_bordered_white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonBorderless.Primary" parent="ButtonBorderless">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="CodeEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:ems">2</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Headline</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ShadowTextView">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="CircleBadgeStyle" parent="ShadowTextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">@string/bold</item>
    </style>

    <style name="SpacingText">
        <item name="android:lineSpacingMultiplier">@dimen/spacing_multiplier</item>
    </style>

    <style name="SingleLineText">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TexItem">
        <item name="fontPath">@string/bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/view_spacing_normal</item>
        <item name="android:paddingEnd">@dimen/view_spacing_normal</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ToolbarShadow">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/shadow</item>
    </style>

    <style name="EntriesWinningsTimeText">
        <item name="android:textColor">@color/accent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <!-- alert dialog    -->

    <!--/Dialog style-->
    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowEnterAnimation">@anim/modal_in_anim</item>
        <item name="android:windowExitAnimation">@anim/modal_out_anim</item>

    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
